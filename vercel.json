{
    "functions": {
        "pages/**/*.tsx": {
            "maxDuration": 10
        }
    },
    "headers": [{
        "source": "/locales/(.*).json",
        "headers": [{
                "key": "Content-Type",
                "value": "application/json"
            },
            {
                "key": "Cache-Control",
                "value": "public, max-age=3600, s-maxage=3600"
            },
            {
                "key": "Access-Control-Allow-Origin",
                "value": "*"
            }
        ]
    }],
    "rewrites": [{
        "source": "/locales/:file",
        "destination": "/public/locales/:file"
    }],
    "trailingSlash": false
}